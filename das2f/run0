set -e
trap 'catch' ERR
trap 'cleanup' EXIT

catch () {
    echo '*** FATAL ERROR in run0h ***'
    exit 1
}
cleanup () {
    echo '(cleaning up)'
    exit 1
}

lockForWriting() {
  echo '' # noop
}
unlock(){
  echo '' # noop
}

appdir=${HOME}/app
${appdir}/make.bash
while true
do
    echo '*** running ***'
    lockForWriting fb.pl
    ./run.bash
    unlock fb.pl
    clear
    sleep 2
done
